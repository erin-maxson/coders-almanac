<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet">
<link rel="stylesheet" href="/css/style.css">

<div class="translucent-form-overlay">
  <form>
    <h3>Add a New Plant with Seeding Dates</h3>
    <div class="row columns">
      <label>Plant Name
        <input type="text" name="plant-name" placeholder="Any">
      </label>
    </div>
    <div class="row columns">
      <label>Planting Season
      <input type="radio" id="html" name="plant-season" value="cool-season">
        <label for="cool-season">Cool-season</label><br>
      <input type="radio" id="css" name="plant-season" value="warm-season">
        <label for="warm-season">warm-season</label><br>
      </label>
    </div>
    <div class="row columns">
      <label for="fall-ind-seed">Fall Indoor Seeding Date(YYYY/MM/DD)
        <input type="date" name="fall-ind-seed" placeholder="Any">
      </label>
    </div>
    <div class="row columns">
      <label for="fall-out-seed">Fall Outdoor Seeding Date(YYYY/MM/DD)
        <input type="date" name="fall-out-seed" placeholder="Any">
      </label>
    </div>
    <div class="row columns">
      <label for="fall-out-seedling">Fall Outdoor Seedling Date(YYYY/MM/DD)
        <input type="date" name="fall-out-seedling" placeholder="Any">
      </label>
    </div>
    <div class="row columns">
      <label for="spring-ind-seeding-start">Spring Indoor Seeding Start Date(YYYY/MM/DD)
        <input type="date" name="spring-ind-seeding-start" placeholder="Any">
      </label>
    </div>
    <div class="row columns">
      <label for="spring-ind-seeding-end">Spring Indoor Seeding End Date(YYYY/MM/DD)
        <input type="date" name="spring-ind-seeding-end" placeholder="Any">
      </label>
    </div>
    <div class="row columns">
      <label for="spring-out-seeding-start">Spring Outdoor Seeding Start Date(YYYY/MM/DD)
        <input type="date" name="spring-out-seeding-start" placeholder="Any">
      </label>
    </div>
    <div class="row columns">
      <label for="spring-out-seeding-end">Spring Outdoor Seeding End Date(YYYY/MM/DD)
        <input type="date" name="spring-out-seeding-end" placeholder="Any">
      </label>
    </div>
    <div class="row columns">
      <label for="spring-trans-start">Spring Transplant Start Date(YYYY/MM/DD)
        <input type="date" name="spring-trans-start" placeholder="Any">
      </label>
    </div>
    <div class="row columns">
      <label for="spring-trans-end">Spring Transplant End Date(YYYY/MM/DD)
        <input type="date" name="spring-trans-end" placeholder="Any">
      </label>
    </div>
    <div class="row columns">
      <label for="plant-description">Plant Description
        <input type="text" name="plant-description" placeholder="Any">
      </label>
    </div>
    <input class="new-plant-form" type="submit" value="Submit">
  </form>
</div>


