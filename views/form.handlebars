{{#if plants.length}}
<div class="col-md-6 plant-list">
  <h3>Current Plants:</h3>

  {{#each plants as |plant|}}
  <div class="row mb-2">
    <div class="col-md-8">
      <h4><a href="/plant/{{plant.id}}">{{plant.name}}</a></h4>
    </div>
    <div class="col-md-4">
      <button class="btn btn-sm btn-danger" data-id="{{plant.id}}">DELETE</button>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}
</div>

